{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["**/*.test.ts", "**/test.config.ts", "node_modules", "**/build/*", "**/*.d.ts"]
}
